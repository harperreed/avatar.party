{
  "hosting": {
    "public": "site/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/a/**",
        "function": "avatar"
      },
      {
        "source": "/token/**",
        "function": "displayToken"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
   "functions": {
    "source": "functions",
    "runtime": "nodejs18" // or nodejs14, nodejs16 or nodejs20
  }
}

{
  "database": {
    "rules": {
      ".read": false,
      ".write": false,
      "addressCache": {
        ".read": true,
        ".write": "auth != null"
      }
    }
  },
  "functions": {
    "source": "functions"
  }
}
